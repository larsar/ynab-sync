- if @budgets.count > 0
  .row.my-4
    .col-sm-6.offset-sm-1
      .table-responsive
        %table.table.table-striped
          %thead.thead-inverse
            %tr
              %th
                Name
              %th
                Accounts
          %tbody
            - @budgets.each do |budget|
              %tr
                %td
                  = budget.name
                %td
                  = budget.accounts.count