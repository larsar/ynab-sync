
.row.my-4
  .col-sm-6.offset-sm-1
    = link_to 'Add Sbanken', sbanken_new_path, {class: 'btn btn-secondary btn-sm'}
    %br
    %br
    - if @sources.count > 0
      .table-responsive
        %table.table.table-striped
          %thead.thead-inverse
            %tr
              %th
                Type
              %th
                Name
              %th
          %tbody
            - @sources.each do |service|
              %tr
                %td
                  = service.type
                %td
                  = service.name
                %td
                  = link_to 'Edit', edit_source_path(service)

                  = link_to 'Delete', source_path(service), :method => :delete, :confirm => 'Delete service and associated transactions?'
