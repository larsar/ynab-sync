= link_to 'Register YNAB', new_ynab_service_path

- if @services.count > 0
  .row.my-4
    .col-sm-6.offset-sm-1
      .table-responsive
        %table.table.table-striped
          %thead.thead-inverse
            %tr
              %th
                Type
              %th
                Name
              %th
          %tbody
            - @services.each do |service|
              %tr
                %td
                  = service.type_display
                %td
                  = service.name
                %td
                  = link_to 'Edit', edit_service_path(service)

                  = link_to 'Delete', service_path(service), :method => :delete, :confirm => 'Delete service and associated transactions?'
