.row.mb-3
  .col-xl-3.col-sm-6.py-2
    .card.bg-success.text-white.h-100
      .card-body.bg-success
        .rotate
          %i.fa.fa-user.fa-4x
        %h6.text-uppercase
          = link_to 'YNAB Budgets', budgets_path, {style: 'color:white'}
        %h1.display-4
          = current_user.budgets.count
  .col-xl-3.col-sm-6.py-2
    .card.text-white.bg-danger.h-100
      .card-body.bg-danger
        .rotate
          %i.fa.fa-list.fa-4x
        %h6.text-uppercase
          = link_to 'YNAB Accounts', ynab_accounts_path, {style: 'color:white'}
        %h1.display-4
          = current_user.ynab_accounts.count
  .col-xl-3.col-sm-6.py-2
    .card.text-white.bg-info.h-100
      .card-body.bg-info
        .rotate
          %i.fa.fa-twitter.fa-4x
        %h6.text-uppercase
          = link_to 'Bank connections', services_path, {style: 'color:white'}
        %h1.display-4
          = current_user.services.count
  .col-xl-3.col-sm-6.py-2
    .card.text-white.bg-warning.h-100
      .card-body
        .rotate
          %i.fa.fa-share.fa-4x
        %h6.text-uppercase
          = link_to 'Bank accounts', services_path, {style: 'color:white'}
        %h1.display-4
          X

- unless current_user.ynab_access_token.blank?
  .row.mb-3
    .col-sm-5
      .card.mb-3
        .card-header
          YNAB Sync
        .card-body
          %p.card-text
            = link_to 'YNAB Sync', sync_budgets_path, {:method => :post, class: 'btn btn-secondary btn-sm'}

